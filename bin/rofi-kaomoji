#!/bin/bash
set -euo pipefail

presets="happy
sad
angry
tableflip
"

kaomoji_type=$(echo "$presets" | rofi -show -dmenu -p "kaomoji type")

results=$(curl -s "https://kaomoji-moe-sfcbpsdxqq-an.a.run.app/api/v1/search?q=$kaomoji_type" | jq -r '.data[]')

echo "$results" | rofi -show -dmenu -p "results" | xclip -selection c
