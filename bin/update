#!/usr/bin/env fish

function inform --argument text
  set_color -o yellow
  echo "$text"
  set_color normal
end

if type -q aura
  inform "Updating Pacman packages"
  sudo aura -Syu

  inform "Updating AUR packages"
  sudo aura -Aua
end

if type -q cargo-install-update
  inform "Updating Rust (cargo) binaries"
  cargo-install-update install-update -a
end

if type -q rtx
  inform "Regenerating rtx completions"
  rtx completion fish > ~/.config/fish/completions/rtx.fish
end
