# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

device=$([[ -z ${LAPTOP+x} ]] && echo "desktop" || echo "laptop")

fresh freshshell/fresh bin/fresh --bin

fresh config/redshift.conf --file=~/.config/redshift/redshift.conf
fresh HaoZeke/base16-zathura build_schemes/colors/base16-onedark.config --file=~/.config/zathura/zathurarc

# fd
fresh config/fdignore --file

# Flameshot
fresh config/flameshot.ini --file=~/.config/Dharkael/flameshot.ini

# mpv
fresh config/mpv/mpv.conf --file=~/.config/mpv/mpv.conf

# topgrade
fresh config/topgrade.toml --file=~/.config/topgrade.toml

# Bin
fresh bin/\* --bin

# GPG
fresh config/gnupg/gpg.conf --file=~/.gnupg/gpg.conf
fresh config/gnupg/gpg-agent.conf --file=~/.gnupg/gpg-agent.conf

# Neovim
fresh config/nvim/lua --file=~/.config/nvim/lua/ --marker=--
fresh config/nvim/init.lua --file=~/.config/nvim/init.lua --marker=--

# i3wm, etc.
fresh-options --file=~/.config/i3/config --marker=#
  fresh khamer/base16-i3 colors/base16-onedark.config
  fresh khamer/base16-i3 client-properties/base16-onedark.config
  fresh config/i3/keybindings/\* --filter="dot-templater ~/.dotfiles/devices/$device.conf"
  fresh config/i3/\*
  if [[ -n ${WORK+x} ]]; then
    fresh config/i3/work/\*
  fi
fresh-options

fresh config/i3status-rust/config.toml --file=~/.config/i3status-rust/config.toml --filter="dot-templater ~/.dotfiles/devices/$device.conf"

fresh config/xorg/xinitrc --file

# Rofi
fresh config/rofi/config.rasi --file=~/.config/rofi/config.rasi
fresh jluttine/rofi-power-menu rofi-power-menu --bin

# Xresources
fresh-options --file=~/.config/xorg/Xresources --marker=!
  fresh config/xorg/Xresources
  fresh pinpox/base16-xresources xresources/base16-onedark-256.Xresources
fresh-options

# Fish
fresh git://git.zx2c4.com/password-store src/completion/pass.fish-completion --file=~/.config/fish/completions/pass.fish

# Picom
if [[ -n ${WORK+x} ]]; then
  fresh config/picom.conf --file=~/.config/picom.conf
fi
